<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/engineActivity"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.andreihh.algoventure.app.EngineActivity">
  <SurfaceView
    android:id="@+id/surfaceView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
  <RelativeLayout
    android:layout_width="128dp"
    android:layout_height="128dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_margin="@dimen/margin_size">
    <ImageButton
      android:layout_width="48dp"
      android:layout_height="64dp"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:onClick="onUp"
      android:src="@drawable/dpad_up"/>
    <ImageButton
      android:layout_width="64dp"
      android:layout_height="48dp"
      android:layout_centerVertical="true"
      android:layout_alignParentRight="true"
      android:onClick="onRight"
      android:src="@drawable/dpad_right"/>
    <ImageButton
      android:layout_width="48dp"
      android:layout_height="64dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:onClick="onDown"
      android:src="@drawable/dpad_down"/>
    <ImageButton
      android:layout_width="64dp"
      android:layout_height="48dp"
      android:layout_centerVertical="true"
      android:layout_alignParentLeft="true"
      android:onClick="onLeft"
      android:src="@drawable/dpad_left"/>
    <Button
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_centerInParent="true"/>
  </RelativeLayout>
</RelativeLayout>
